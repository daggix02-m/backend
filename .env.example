# Supabase Configuration
SUPABASE_URL="https://your-project-ref.supabase.co"
SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# JWT Configuration
# IMPORTANT: Generate a strong, random secret key for production
# You can generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your_super_secret_jwt_key_change_this_in_production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3000
NODE_ENV="development" # Set to "production" when deploying to Vercel

# Chapa Payment Gateway
# Get these from your Chapa dashboard: https://dashboard.chapa.co/
CHAPA_SECRET_KEY="your_chapa_secret_key"
CHAPA_WEBHOOK_SECRET="your_chapa_webhook_secret"

# CORS Configuration
# In development, you can use "*" to allow all origins
# In production, set this to your frontend URL (e.g., https://your-frontend.vercel.app)
CORS_ORIGIN="*"

# Frontend URL
# Used for payment redirects and callbacks
# In production, set this to your frontend URL
FRONTEND_URL="http://localhost:3000"

# Logging
LOG_LEVEL="info" # Options: "debug", "info", "warn", "error"
